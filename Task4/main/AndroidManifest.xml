<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anirudh.anirudhswami.spider_2016_3" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewAllResults"
            android:label="@string/title_activity_view_movies"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SingleMovie"
            android:parentActivityName=".ViewAllResults" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anirudh.anirudhswami.spider_2016_3.ViewAllResults" />
        </activity>
        <activity android:name=".AddMovie" >
        </activity>
    </application>

</manifest>
